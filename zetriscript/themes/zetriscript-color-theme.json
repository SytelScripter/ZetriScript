{
    "name": "ZetriScript Color Theme",
    "type": "dark",
    "colors": {
        "editor.background": "#1E1E1E",
        "editor.foreground": "#D4D4D4",
        "editorCursor.foreground": "#A7A7A7"
    },
    "tokenColors": [
        {
            "scope": "keyword.control.zetriscript",
            "settings": {
                "foreground": "#C586C0",  // Color for keywords (e.g., if, else)
                "fontStyle": "bold"
            }
        },
        {
            "scope": "string.quoted.double.zetriscript",
            "settings": {
                "foreground": "#CE9178"  // Color for strings
            }
        },
        {
            "scope": "constant.numeric.zetriscript",
            "settings": {
                "foreground": "#B5CEA8"  // Color for numbers
            }
        },
        {
            "scope": "comment.line.double-slash.zetriscript",
            "settings": {
                "foreground": "#6A9955",  // Color for comments
                "fontStyle": "italic"
            }
        }
    ]
}
